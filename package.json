{
  "name": "tutorship",
  "version": "0.1.0",
  "description": "An Interactive Programming Tutorials Platform",
  "license": "MIT",
  "angular-cli": {},
  "scripts": {
    "start": "concurrently --kill-others \"npm run app:run\" \"npm run api:run\"",
    "lint": "tslint \"src/**/*.ts\" --project src/tsconfig.json --type-check && tslint \"e2e/**/*.ts\" --project e2e/tsconfig.json --type-check",
    "test": "ng test --watch=false",
    "pree2e": "webdriver-manager update",
    "e2e": "protractor",
    "build": "npm run app:build && npm run api:build",
    "app:build": "ng build --prod --sm=false --aot=true --output-path=dist/public",
    "app:run": "ng serve --aot=true --proxy-config proxy.conf.json",
    "api:build": "tsc -p ./server",
    "api:run": "tsc -p ./server && concurrently \"tsc -w -p ./server\" \"nodemon dist/bin/www.js\" ",
    "postinstall": "npm run build"
  },
  "private": true,
  "engines": {
    "node": "^6.9.4"
  },
  "dependencies": {
    "@angular/common": "^2.4.3",
    "@angular/compiler": "^2.4.3",
    "@angular/core": "^2.4.3",
    "@angular/forms": "^2.4.3",
    "@angular/http": "^2.4.3",
    "@angular/platform-browser": "^2.4.3",
    "@angular/platform-browser-dynamic": "^2.4.3",
    "@angular/router": "^3.4.3",
    "@types/body-parser": "0.0.33",
    "@types/compression": "0.0.33",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.0.34",
    "angular-cli": "^1.0.0-beta.25.5",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "core-js": "^2.4.1",
    "express": "^4.14.0",
    "nodemon": "^1.11.0",
    "path": "^0.12.7",
    "rxjs": "^5.0.1",
    "serve-favicon": "^2.3.2",
    "ts-helpers": "^1.1.1",
    "zone.js": "~0.7.2"
  },
  "devDependencies": {
    "concurrently": "^3.1.0",
    "@angular/compiler-cli": "^2.4.3",
    "@types/jasmine": "2.5.38",
    "@types/node": "^6.0.42",
    "codelyzer": "~2.0.0-beta.1",
    "jasmine-core": "2.5.2",
    "jasmine-spec-reporter": "2.5.0",
    "karma": "1.2.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-remap-istanbul": "^0.2.1",
    "protractor": "~4.0.13",
    "ts-node": "1.2.1",
    "tslint": "^4.3.0",
    "typescript": "~2.0.10"
  }
}
